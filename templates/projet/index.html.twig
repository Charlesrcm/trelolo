{% extends 'base.html.twig' %}

{% block title %}Projet !{% endblock %}

{% block body %}

{# si l'utilisateur est connecté on affiche la page des projets #}
{% if app.user %}
<div class="container-fluid mt-3 mb-5 d-flex justify-content-between">
    <h1>Page des projets</h1>
    <div class="align-self-center text-end">
        <a class="btn btn-primary text-decoration-none text-light" href="/admin">Ajouter un projet</a>
        <a class="btn btn-primary text-decoration-none text-light" href="/admin">Ajouter une tâche</a>
    </div>
</div>

<div class="container">
    {% for prio in prioriteListe %}
    
        <div id="{{ prio.id }}" class="projetParent my-3">
            <div class="d-flex col-12 justify-content-around border-bottom border-2">
                <h3 class="col-4 pb-2">{{prio.libelle}}</h3>
                <div class="col-4 text-center"><i class="fa fa-regular fa-circle-up fa-xl"></i></div>
            </div>

            <section class="active" id="projetContainer {{ prio.id }}">
                {% for projet in projetListe %}

                {# test pour mettre les projet dans chaques colonnes #}
                {% if (projet.priorite is same as prio) %}
                <div class="border border-info border-3 rounded my-3" id="projet">

                    <div class="row justify-content-evenly align-items-center">
                        <h4 class="col-5 pe-1">{{projet|capitalize}}</h4>
                        <p class="col-7 mb-0">Administrateur : {{projet.utilisateur}}</p>
                    </div>

                    {% for tache in tacheListe %}
                    {% if (tache.projet is same as projet)%}
                    <div class="card  mb-3">
                        <div class=" card-header bg-black bg-gradient bg-opacity-50">
                            <h5 class="text-light">{{ tache|capitalize }}</h5>

                            {# select de l'état de la tâche #}
                            <div class="form-floating">
                                <select class="form-select" id="floatingSelect" tache="{{ tache.id }}">
                                    {% for etat in etatListe %}
                                    {% if (tache.etat is same as(etat)) %}
                                        <option value="{{ etat.id }}" selected>{{ etat }}</option>
                                    {% else %}
                                        <option value="{{ etat.id }}">{{ etat }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                            
                        </div>
                        <div class="card-body">
                            <h6 class="card-title"><strong>Attribué à : </strong>{{ tache.utilisateur }}</h6>
                            <p class="card-text"><strong>Description : </strong>{{ tache.description }}</p>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}

                </div>
                {% endif %}
                {% endfor %}
            </section>
        </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}


